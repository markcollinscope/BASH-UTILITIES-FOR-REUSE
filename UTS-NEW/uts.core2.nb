_uts.fn.name()
{
	local level=$1;

	if test -z $level; then
		level=3;
	fi

	echo ${FUNCNAME[$level]}	
}

function uts.abort()
{
	local level=2;
	local args=$(_uts.parse.level.flag -e "$@");

	local fn=$(_uts.fn.name);

	2>&1 echo "$fn: error - aborting -  $@"
	exit 1
}

_uts.assert()
{
	local fn=$(_uts.fn.name 3); 

	if ! $1; then 
		uts.abort "$fn - assetion failure"
	fi
	return 0;
}

