colon_to_space() {
    local input=$1
    local output=""
    local temp="$input"
    
    # Loop until temp is empty
    while [[ "$temp" ]]; do
        # Extract the string before the colon
        local substring="${temp%%:*}"
        
        # Append the substring to output with a space
        output+=" $substring"
        
        # Remove the substring and the colon from temp
        temp="${temp#*:}"
    done
    
    # Remove leading whitespace
    output="${output# }"
    
    # Print the output
    echo "$output"
}

# Example usage
input="string1:string2:string3"
output=$(colon_to_space "$input")
echo "Output: $output"
