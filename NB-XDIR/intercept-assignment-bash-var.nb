setup_trap() {
    local var_name=$1
    local file_path=$2

    # Define the function to handle both assignment and access of the variable
    eval "$var_name() {
        if [[ \$# -eq 0 ]]; then
            # If no arguments provided, retrieve the value from the file
            cat \"$file_path\"
        else
            # If arguments provided, save the value to the file
            echo \"\$1\" > \"$file_path\"
        fi
    }"
}

