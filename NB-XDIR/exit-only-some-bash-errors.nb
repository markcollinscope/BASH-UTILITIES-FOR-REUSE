#!/bin/bash

# Set trap for ERR signal
trap 'error_exit "$LINENO" "$?"' ERR

# Function to handle errors
error_exit() {
    local line_num=$1
    local exit_code=$2
    echo "Error: line $line_num - exit status $exit_code"
    exit 1
}

function f() { return 1; }

# Call the function and explicitly check its return value
if ! f; then 
    echo 'error exit'
fi

echo 'still going'

