get_caller_lineno() {
    local frame=1
    local caller_lineno=${BASH_LINENO[frame]}

    # Skip over get_caller_lineno function itself
    while [[ "${FUNCNAME[frame]}" == "get_caller_lineno" ]]; do
        (( frame++ ))
        caller_lineno=${BASH_LINENO[frame]}
    done

    echo "Caller line number is: $caller_lineno"
}
